# ============================================
# LinguaLeap Environment Variables Example
# ============================================
# Copy this file to .env and .env.local and adjust values

# ====================
# Frontend / Public
# ====================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
# Google Gemini API Key from https://ai.google.dev/
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here
NODE_ENV=development

# ====================
# Backend / Secrets
# ====================
PORT=3001
JWT_SECRET=change_this_to_a_secure_random_string_min_32_chars
CLIENT_URL=http://localhost:3000

# Database
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change_me_root
MONGO_APP_USER=lingualeap
MONGO_APP_PASSWORD=change_me_app
MONGO_DB_NAME=lingualeap
# If using Docker, hostname is 'mongodb'. If local, 'localhost'
MONGODB_URI=mongodb://lingualeap:change_me_app@mongodb:27017/lingualeap?authSource=lingualeap

# Email (SMTP)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@lingualeap.local
