rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to courses and users for display purposes
    match /courses/{courseId} {
      allow read: if true;
      allow write: if false; // Only backend/admin should write courses
    }

    match /users/{userId} {
      allow read: if true;
      
      // A user can create their own user document, but cannot update it.
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if false;
    }
  }
}
